{
  "name": "Love Jike Extension",
  "description" : "Better Jike Web",
  "version": "2.1.1",
  "browser_action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Jike"
  },
  "manifest_version": 2,
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      }
    }
  },
  "icons": 
  { 
    "16": "icon16.png",             
    "48": "icon48.png",            
    "128": "icon128.png" 
  },  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.okjike.com/feed/*", "https://web.ruguoapp.com/feed/*", "http://web.okjike.com/feed/*", "http://web.ruguoapp.com/feed/*"
      ],
      "js": ["notification.js"]
    }
  ],
  "permissions": [
    "https://app.jike.ruguoapp.com/"
  ]
}
